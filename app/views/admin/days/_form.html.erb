<div id="goal-amount" data-amount="<%= @goal.amount %>">
  <span>Total da meta: </span>
  <%= @goal.amount %>
</div>
<div>
  <span>Valor restante (precisa chegar a zero):</span>
  <span id="remaining"></span>
</div>
<%= form_tag admin_store_goal_days_path do %>

  <% @days.each_with_index do |day, index| %>
    <div class="row">
      <div class="col-md-3">
        <%= label_tag :date %>
        <%= date_field_tag :date, day.date, name: "days[#{index}][date]" %>
      </div>
      <div class="col-md-3">
        <%= label_tag :amount %>
        <%= text_field_tag :amount, day.amount, name: "days[#{index}][amount]", id: "amount#{index}", class: "amount" %>
      </div>

      <div class="col-md-2">
        <%= label_tag :vendor %>
        <%= select_tag :vendor, options_for_select(Vendor.where(store: @goal.store).collect{ |u| [u.name, u.id]}), name: "days[#{index}][vendors][]"  %>
        <button class="btn add-more" type="button">+</button>
      </div>
    </div>
  <% end %>

  <% hidden_field_tag :goal, @goal %>
  <div class="actions">
    <%= submit_tag nil, disabled: true, id: 'submit-button' %>
  </div>
<% end %>

<script>
    $(document).ready(function(){
        $(".add-more").click(function(e){
            e.preventDefault();
            var newIn = $(this).prev('select').clone();
            var removeBtn = '<button type="button" class="btn btn-danger remove-me" >-</button></div><div id="field">';
            var removeButton = $(removeBtn);

            $(this).after(newIn);
            $(newIn).after(removeButton);

            $('.remove-me').click(function(e){
                e.preventDefault();
                $(this).prev('select').remove();
                $(this).remove();
            });
        });

        $('.amount').on('change', function(){
            var goal_amount = $('#goal-amount').data('amount');
            goal_amount -= sumAmount();
            if(goal_amount < 0) {
                alert('Valores nÃ£o podem ultrapassar o total da Meta')
                $(this).val('');
            } else if(goal_amount === 0) {
                $('#remaining').html(goal_amount)
                $('#submit-button').prop('disabled', false);
            } else {
                $('#submit-button').prop('disabled', true);
                $('#remaining').html(goal_amount)
            }
        })

        function sumAmount() {
            var sum = 0;
            var arr = $('.amount').map(function() {
                return $(this).val();
            }).get();
            $.each(arr,function(){sum+=parseFloat(this) || 0;});
            return sum;
        }

    });
</script>

