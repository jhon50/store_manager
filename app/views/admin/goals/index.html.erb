<p id="notice"><%= notice %></p>

<h1>Metas</h1>

<h4>Loja: <%= @goals.first.store.name %></h4>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.start_date %></td>
        <td><%= goal.end_date %></td>
        <td><%= goal.ref_month %></td>
        <td><%= link_to 'Show',    admin_store_goal_path(goal, store_id: @store) %></td>
        <td><%= link_to 'Edit',    edit_admin_store_goal_path(goal, store_id: @store) %></td>
        <td><%= link_to 'Destroy', admin_store_goal_path(goal, store_id: @store), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Meta', new_admin_store_goal_path(store_id: @store) %>
