<%= simple_form_for([:admin, @vendor]) do |form| %>
  <% if @vendor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vendor.errors.count, "error") %> prohibited this admin_vendor from being saved:</h2>

      <ul>
      <% @vendor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :store_id %>
    <%= form.input_field :store_id, collection: Store.all.collect {|a| [a.name, a.id]}, include_blank: 'Selecione uma loja' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
